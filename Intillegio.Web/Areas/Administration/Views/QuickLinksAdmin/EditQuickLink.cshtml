@model Intillegio.DTOs.BindingModels.Admin.AdminQuickLinkBindingModel

@{
    ViewData["Title"] = "Edit Quick Links";
    Layout = "~/Areas/Administration/Shared/_Layout.cshtml";
}
<form asp-action="QuickLinkEdit">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fa fa-link"></i> Edit Quick Link</h5>
            </div>
            <div class="modal-body">
                <partial name="~/Areas/Administration/Views/QuickLinksAdmin/Partials/_EditDetail.cshtml" />
            </div>
            <div class="modal-header bg-info text-white d-flex justify-content-around">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-area="Administration" asp-controller="QuickLinksAdmin" asp-action="QuickLinksAdmin" class="btn btn-secondary"><i class="fa fa-times"></i> Cancel</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}