@model Intillegio.DTOs.BindingModels.Admin.AdminTeamMemberBindingModel
@{
    ViewData["Title"] = "Team Member Edit";

}
<form asp-action="TeamMemberEdit">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fa fa-users"></i> Edit Team Member</h5>
            </div>
            <div class="modal-body">
                <partial name="~/Areas/Administration/Views/TeamMembers/Partials/_EditDetail.cshtml" />
            </div>
            <div class="modal-header bg-info text-white d-flex justify-content-around">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-area="Administration" asp-controller="TeamMembers" asp-action="TeamMembers" class="btn btn-secondary"><i class="fa fa-times"></i> Cancel</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}