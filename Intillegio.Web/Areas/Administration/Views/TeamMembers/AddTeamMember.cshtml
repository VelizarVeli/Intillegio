                        {
                            <option>@activityOrSkill</option>
                        }
                    </select>
                    <span asp-validation-for="ActivitiesAndSkills" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProffessionalSkills"></label>
                    <select asp-for="ProffessionalSkills" class="form-control">
                        <option value="-- Избери категория --"></option>
                        @foreach (var proffessionalSkill in Model.ProffessionalSkills)
                        {
                            <option>@proffessionalSkill</option>
                        }
                    </select>
                    <span asp-validation-for="ProffessionalSkills" class="text-danger"></span>
                </div>*@
                <div class="modal-footer">
                    <a asp-area="Administration" asp-controller="TeamMembers" asp-action="TeamMembers" class="btn btn-secondary">Close</a>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

