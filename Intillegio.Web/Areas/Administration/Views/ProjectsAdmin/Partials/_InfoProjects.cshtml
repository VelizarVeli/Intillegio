@model List<Intillegio.Common.ViewModels.Admin.AdminProjectViewModel>
<section id="posts">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">
                        <h4>Projects</h4>
                    </div>
                    <table class="table table-striped">
                        <thead class="thead-inverse">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Stage</th>
                                <th>Category Name</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var project in Model)
                            {
                            <tr>
                                <td scope="row">@project.Id</td>
                                <td>@project.Name</td>
                                <td>@project.Stage</td>
                                <td>@project.CategoryName</td>
                                <td>
                                    <a asp-area="Administration" asp-controller="ProjectsAdmin" asp-action="ProjectDetails" asp-route-id="@project.Id" class="btn btn-secondary">
                                        <i class="fa fa-angle-double-right"></i> Details
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <partial name="~/Areas/Administration/Shared/_Users.cshtml"/>
        </div>
    </div>
</section>