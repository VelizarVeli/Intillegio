@model Intillegio.DTOs.BindingModels.Admin.AdminProjectBindingModel

@{
    ViewData["Title"] = "Add Project";
    Layout = "~/Areas/Administration/Shared/_Layout.cshtml";
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header bg-info text-white">
            <h5 class="modal-title"><i class="fa fa-tasks"></i> Add Project</h5>
        </div>
        <div class="modal-body">
            <form asp-action="AddProject">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectInfo" class="control-label"></label>
                    <textarea asp-for="ProjectInfo" class="form-control"></textarea>
                    <span asp-validation-for="ProjectInfo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" asp-items="ViewBag.Category" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Stage" class="control-label"></label>
                    <select asp-for="Stage" asp-items="ViewBag.Stage" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Partner" class="control-label"></label>
                    <select asp-for="Partner" asp-items="ViewBag.Partner" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StartingDate" class="control-label"></label>
                    <input asp-for="StartingDate" class="form-control" />
                    <span asp-validation-for="StartingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image350X350" class="control-label"></label>
                    <input asp-for="Image350X350" class="form-control" />
                    <span asp-validation-for="Image350X350" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image1110X450" class="control-label"></label>
                    <input asp-for="Image1110X450" class="form-control" />
                    <span asp-validation-for="Image1110X450" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image360X240" class="control-label"></label>
                    <input asp-for="Image360X240" class="form-control" />
                    <span asp-validation-for="Image360X240" class="text-danger"></span>
                </div>
                <div class="modal-footer d-flex justify-content-around">
                    <a asp-area="Administration" asp-controller="ProjectsAdmin" asp-action="ProjectsAdmin" class="btn btn-secondary">Close</a>
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Editor{
    <script src="https://cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>
    <script>CKEDITOR.replace( 'ProjectInfo' );</script>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}