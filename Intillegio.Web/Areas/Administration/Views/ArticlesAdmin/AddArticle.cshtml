@model Intillegio.DTOs.BindingModels.Admin.AdminArticleBindingModel

@{
    ViewData["Title"] = "Add Article";
    Layout = "~/Areas/Administration/Shared/_Layout.cshtml";
}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header bg-secondary text-white">
            <h5 class="modal-title"><i class="fa fa-newspaper-o"></i> Add Article</h5>
        </div>
        <div class="modal-body">
            <form asp-action="AddArticle" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" asp-items="ViewBag.Category" class="form-control" ></select>
                </div>
                <div class="form-group">
                    <label asp-for="VideoLink" class="control-label"></label>
                    <input asp-for="VideoLink" class="form-control" />
                    <span asp-validation-for="VideoLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image65X65" class="control-label"></label>
                    <input asp-for="Image65X65" class="form-control" />
                    <span asp-validation-for="Image65X65" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image350X220" class="control-label"></label>
                    <input asp-for="Image350X220" class="form-control" />
                    <span asp-validation-for="Image350X220" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image390X245" class="control-label"></label>
                    <input asp-for="Image390X245" class="form-control" />
                    <span asp-validation-for="Image390X245" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoImage400X250" class="control-label"></label>
                    <input asp-for="VideoImage400X250" class="form-control" />
                    <span asp-validation-for="VideoImage400X250" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image825X530" class="control-label"></label>
                    <input asp-for="Image825X530" class="form-control" />
                    <span asp-validation-for="Image825X530" class="text-danger"></span>
                </div>
                <div class="modal-footer d-flex justify-content-around">
                    <a asp-area="Administration" asp-controller="ArticlesAdmin" asp-action="ArticlesAdmin" class="btn btn-secondary">Close</a>
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}