@model Intillegio.DTOs.BindingModels.Admin.AdminProductBindingModel

@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Areas/Administration/Shared/_Layout.cshtml";
}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header bg-danger text-white">
            <h5 class="modal-title"><i class="fa fa-product-hunt"></i> Add Product</h5>
        </div>
        <div class="modal-body">
            <form asp-action="AddProduct" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StockKeepingUnit" class="control-label"></label>
                    <input asp-for="StockKeepingUnit" class="form-control" />
                    <span asp-validation-for="StockKeepingUnit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" asp-items="ViewBag.Category" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image255X325" class="control-label"></label>
                    <input asp-for="Image255X325" class="form-control" />
                    <span asp-validation-for="Image255X325" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image540X540" class="control-label"></label>
                    <input asp-for="Image540X540" class="form-control" />
                    <span asp-validation-for="Image540X540" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image135X135" class="control-label"></label>
                    <input asp-for="Image135X135" class="form-control" />
                    <span asp-validation-for="Image135X135" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image95X125" class="control-label"></label>
                    <input asp-for="Image95X125" class="form-control" />
                    <span asp-validation-for="Image95X125" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductCategory" class="control-label"></label>
                    <input asp-for="ProductCategory" class="form-control" />
                    <span asp-validation-for="ProductCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Height" class="control-label"></label>
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Width" class="control-label"></label>
                    <input asp-for="Width" class="form-control" />
                    <span asp-validation-for="Width" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Material" class="control-label"></label>
                    <input asp-for="Material" class="form-control" />
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="modal-footer d-flex justify-content-around">
                    <a asp-area="Administration" asp-controller="ProductsAdmin" asp-action="ProductsAdmin" class="btn btn-secondary">Close</a>
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}