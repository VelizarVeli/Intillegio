@model List<Intillegio.Common.ViewModels.Admin.AdminProductViewModel>
<section id="posts">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">
                        <h4>Products</h4>
                    </div>
                    <table class="table table-striped">
                        <thead class="thead-inverse">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>SKU</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td scope="row">@product.Id</td>
                                    <td>@product.Name</td>
                                    <td>@product.Price</td>
                                    <td>@product.StockKeepingUnit</td>
                                    <td>
                                        <a asp-area="Administration" asp-controller="ProductsAdmin" asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-secondary">
                                            <i class="fa fa-angle-double-right"></i> Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <partial name="~/Areas/Administration/Shared/_Users.cshtml" />
        </div>
    </div>
</section>