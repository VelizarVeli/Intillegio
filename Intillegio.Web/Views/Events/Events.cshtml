@model IEnumerable<Intillegio.Common.ViewModels.EventViewModel>
@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="~/Views/Events/PartialViews/Events/_PageTitleEvents.cshtml" />
<div class="section-block">
    <div class="container">
        @foreach (var eventure in Model)
        {
            if (eventure.About.Length > 296)
            {
                eventure.About = eventure.About.Substring(0, 296) + "...";
            }
            <div class="blog-list-simple">
                <div class="row">
                    <div class="col-md-5 col-sm-5 col-12">
                        <div class="blog-list-simple-img">
                            <img src="@eventure.Image445X255" alt="img">
                            <div class="data-box-simple">
                                <h4>@eventure.StartDateTime.Day</h4>
                                <p>@eventure.StartDateTime.ToString("MMM")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-7 col-12">
                        <div class="blog-list-simple-text">
                            <span>@eventure.Town</span>
                            <h4>@eventure.Name</h4>
                            <ul>
                                <li><i class="fa fa-map-marker"></i>@eventure.Place</li>
                                <li><i class="fa fa-clock-o"></i>@eventure.StartDateTime.ToString("HH:mm") - @eventure.EndTime.ToString("HH:mm")</li>
                            </ul>
                            <p>
                                @eventure.About
                            </p>
                            <div class="mt-20 left-holder">
                                <a asp-area="" asp-controller="Events" asp-action="EventDetails" asp-route-id="@eventure.Id" class="primary-button button-sm">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<partial name="~/Views/Shared/_ClientsCarousel.cshtml" />